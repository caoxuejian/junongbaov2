<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nxt.nxtapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="11" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 读取手机权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 安装包权限 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 手机振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 语音权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.nxt.nxtapp.NXTAPPApplication"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar"
        tools:replace="android:label" >
        <activity
            android:name="com.nxt.nxtapp.SplashBaseActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nxt.nxtapp.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.nxt.nxtapp.ui.PublicActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nxt.nxtapp.ui.ListViewActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nxt.nxtapp.AlertMsgs"
            android:screenOrientation="portrait"
            android:theme="@style/MyDialogStyle" >
        </activity>
        <activity
            android:name="com.nxt.nxtapp.AbsMainActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>