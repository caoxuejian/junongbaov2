<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >
    
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp" >
 <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="分享到：" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp" >

       

        <TextView
            android:id="@+id/share_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/wxfenxiang"
            android:gravity="center_horizontal"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/share_wxpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/shpy"
            android:gravity="center_horizontal"
            android:text="朋友" 
            />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/share_wb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/share_wb"
            android:gravity="center_horizontal"
            android:text="微博" 
            />
        <TextView
            android:id="@+id/share_dx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/share_dx"
            android:gravity="center_horizontal"
            android:text="短信" 
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sharenx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="10dp" >

        <TextView
            android:id="@+id/share_nxdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/share_nx"
            android:gravity="center_horizontal"
            android:text="我的圈子" 
            />
        <TextView
            android:id="@+id/share_nxpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/list_group"
            android:gravity="center_horizontal"
            android:text="农信好友" 
            />
    </LinearLayout>

</LinearLayout>